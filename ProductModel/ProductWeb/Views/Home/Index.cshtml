@model List<ProductModels.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table>
            <tr>
                <td>产品名</td>
                <td>产品类型</td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.cat.CategoryName</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
